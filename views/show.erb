<!-- The show.erb will SHOW the specific post and display it by refercing the instance variable -->
<div class="micro_post">
  <h1><%= @micro_post["blog_title"] %></h1>
  <p>by: <%= @micro_post["author"] %></p>
  <div><%= @micro_post["blog_body"] %></div>
</div>
<% id = @micro_post["id"] %>

<a href=<%= "/micro_post/#{id}/edit" %>> Edit Post </a>

<form action=<%= "/micro_post/#{id}"%> method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
